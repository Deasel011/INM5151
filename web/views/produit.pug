doctype html
html(lang="en")
	head
		title Produit
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
	body
		.panel.panel-default
			.panel-heading Ajouter un produit manuellement
			.panel-body
				.container
					form.form-horizontal
						.form-group
							label.col-sm-2.control-label(for="titreInput") Titre*
							.col-sm-10
								input#titreInput.form-control(type="text", placeholder="Tomate, Carotte, ...")
						.form-group
							label.col-sm-2.control-label(for="poidsInput") Poids*
							.col-sm-10
								input#poidsInput.form-control(type="number", placeholder="Saisir le poids du produit en lb.")
						.form-group
							label.col-sm-2.control-label(for="dateInput") Date de p√©remption
							.col-sm-10
								input#dateInput.form-control(type="date")
						div(align="right")
							button.btn.btn-success(type="button") Ajouter
							button.btn.btn-default(type="button") Vider
